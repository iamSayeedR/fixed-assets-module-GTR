{
    "databaseChangeLog": [
        {
            "changeSet": {
                "id": "050-create-fixed-asset-write-offs-table",
                "author": "system",
                "changes": [
                    {
                        "createTable": {
                            "tableName": "fixed_asset_write_offs",
                            "columns": [
                                {
                                    "column": {
                                        "name": "write_off_id",
                                        "type": "BIGINT",
                                        "autoIncrement": true,
                                        "constraints": {
                                            "primaryKey": true,
                                            "nullable": false
                                        }
                                    }
                                },
                                {
                                    "column": {
                                        "name": "write_off_number",
                                        "type": "VARCHAR(50)",
                                        "constraints": {
                                            "unique": true,
                                            "nullable": false
                                        }
                                    }
                                },
                                {
                                    "column": {
                                        "name": "fixed_asset_id",
                                        "type": "BIGINT",
                                        "constraints": {
                                            "nullable": false
                                        }
                                    }
                                },
                                {
                                    "column": {
                                        "name": "write_off_date",
                                        "type": "DATE",
                                        "constraints": {
                                            "nullable": false
                                        }
                                    }
                                },
                                {
                                    "column": {
                                        "name": "write_off_reason",
                                        "type": "TEXT",
                                        "constraints": {
                                            "nullable": false
                                        }
                                    }
                                },
                                {
                                    "column": {
                                        "name": "gross_cost_at_write_off",
                                        "type": "DECIMAL(19,4)",
                                        "constraints": {
                                            "nullable": false
                                        }
                                    }
                                },
                                {
                                    "column": {
                                        "name": "accumulated_depreciation_at_write_off",
                                        "type": "DECIMAL(19,4)",
                                        "constraints": {
                                            "nullable": false
                                        }
                                    }
                                },
                                {
                                    "column": {
                                        "name": "net_book_value_at_write_off",
                                        "type": "DECIMAL(19,4)",
                                        "constraints": {
                                            "nullable": false
                                        }
                                    }
                                },
                                {
                                    "column": {
                                        "name": "loss_amount",
                                        "type": "DECIMAL(19,4)",
                                        "constraints": {
                                            "nullable": false
                                        }
                                    }
                                },
                                {
                                    "column": {
                                        "name": "journal_entry_id",
                                        "type": "BIGINT"
                                    }
                                },
                                {
                                    "column": {
                                        "name": "is_posted",
                                        "type": "BOOLEAN",
                                        "defaultValueBoolean": false
                                    }
                                },
                                {
                                    "column": {
                                        "name": "posted_date",
                                        "type": "TIMESTAMP"
                                    }
                                },
                                {
                                    "column": {
                                        "name": "posted_by",
                                        "type": "VARCHAR(100)"
                                    }
                                },
                                {
                                    "column": {
                                        "name": "created_at",
                                        "type": "TIMESTAMP",
                                        "defaultValueComputed": "CURRENT_TIMESTAMP"
                                    }
                                },
                                {
                                    "column": {
                                        "name": "created_by",
                                        "type": "VARCHAR(100)"
                                    }
                                }
                            ]
                        }
                    },
                    {
                        "addForeignKeyConstraint": {
                            "baseTableName": "fixed_asset_write_offs",
                            "baseColumnNames": "fixed_asset_id",
                            "constraintName": "fk_write_offs_asset",
                            "referencedTableName": "fixed_assets",
                            "referencedColumnNames": "fixed_asset_id"
                        }
                    },
                    {
                        "addForeignKeyConstraint": {
                            "baseTableName": "fixed_asset_write_offs",
                            "baseColumnNames": "journal_entry_id",
                            "constraintName": "fk_write_offs_journal",
                            "referencedTableName": "journal_entries",
                            "referencedColumnNames": "journal_entry_id",
                            "onDelete": "SET NULL"
                        }
                    }
                ]
            }
        }
    ]
}