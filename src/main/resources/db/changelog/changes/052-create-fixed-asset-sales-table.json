{
    "databaseChangeLog": [
        {
            "changeSet": {
                "id": "052-create-fixed-asset-sales-table",
                "author": "system",
                "changes": [
                    {
                        "createTable": {
                            "tableName": "fixed_asset_sales",
                            "columns": [
                                {
                                    "column": {
                                        "name": "sale_id",
                                        "type": "BIGINT",
                                        "autoIncrement": true,
                                        "constraints": {
                                            "primaryKey": true,
                                            "nullable": false
                                        }
                                    }
                                },
                                {
                                    "column": {
                                        "name": "sale_number",
                                        "type": "VARCHAR(50)",
                                        "constraints": {
                                            "unique": true,
                                            "nullable": false
                                        }
                                    }
                                },
                                {
                                    "column": {
                                        "name": "fixed_asset_id",
                                        "type": "BIGINT",
                                        "constraints": {
                                            "nullable": false
                                        }
                                    }
                                },
                                {
                                    "column": {
                                        "name": "preparation_id",
                                        "type": "BIGINT"
                                    }
                                },
                                {
                                    "column": {
                                        "name": "sale_date",
                                        "type": "DATE",
                                        "constraints": {
                                            "nullable": false
                                        }
                                    }
                                },
                                {
                                    "column": {
                                        "name": "sale_price",
                                        "type": "DECIMAL(19,4)",
                                        "constraints": {
                                            "nullable": false
                                        }
                                    }
                                },
                                {
                                    "column": {
                                        "name": "buyer_id",
                                        "type": "BIGINT",
                                        "constraints": {
                                            "nullable": false
                                        }
                                    }
                                },
                                {
                                    "column": {
                                        "name": "gross_cost_at_sale",
                                        "type": "DECIMAL(19,4)",
                                        "constraints": {
                                            "nullable": false
                                        }
                                    }
                                },
                                {
                                    "column": {
                                        "name": "accumulated_depreciation_at_sale",
                                        "type": "DECIMAL(19,4)",
                                        "constraints": {
                                            "nullable": false
                                        }
                                    }
                                },
                                {
                                    "column": {
                                        "name": "net_book_value_at_sale",
                                        "type": "DECIMAL(19,4)",
                                        "constraints": {
                                            "nullable": false
                                        }
                                    }
                                },
                                {
                                    "column": {
                                        "name": "sales_invoice_id",
                                        "type": "BIGINT"
                                    }
                                },
                                {
                                    "column": {
                                        "name": "journal_entry_id",
                                        "type": "BIGINT"
                                    }
                                },
                                {
                                    "column": {
                                        "name": "is_posted",
                                        "type": "BOOLEAN",
                                        "defaultValueBoolean": false
                                    }
                                },
                                {
                                    "column": {
                                        "name": "posted_date",
                                        "type": "TIMESTAMP"
                                    }
                                },
                                {
                                    "column": {
                                        "name": "posted_by",
                                        "type": "VARCHAR(100)"
                                    }
                                },
                                {
                                    "column": {
                                        "name": "created_at",
                                        "type": "TIMESTAMP",
                                        "defaultValueComputed": "CURRENT_TIMESTAMP"
                                    }
                                },
                                {
                                    "column": {
                                        "name": "created_by",
                                        "type": "VARCHAR(100)"
                                    }
                                }
                            ]
                        }
                    },
                    {
                        "addForeignKeyConstraint": {
                            "baseTableName": "fixed_asset_sales",
                            "baseColumnNames": "fixed_asset_id",
                            "constraintName": "fk_sales_asset",
                            "referencedTableName": "fixed_assets",
                            "referencedColumnNames": "fixed_asset_id"
                        }
                    },
                    {
                        "addForeignKeyConstraint": {
                            "baseTableName": "fixed_asset_sales",
                            "baseColumnNames": "preparation_id",
                            "constraintName": "fk_sales_preparation",
                            "referencedTableName": "fixed_asset_sale_preparations",
                            "referencedColumnNames": "preparation_id",
                            "onDelete": "SET NULL"
                        }
                    },
                    {
                        "addForeignKeyConstraint": {
                            "baseTableName": "fixed_asset_sales",
                            "baseColumnNames": "buyer_id",
                            "constraintName": "fk_sales_buyer",
                            "referencedTableName": "companies",
                            "referencedColumnNames": "company_id"
                        }
                    },
                    {
                        "addForeignKeyConstraint": {
                            "baseTableName": "fixed_asset_sales",
                            "baseColumnNames": "journal_entry_id",
                            "constraintName": "fk_sales_journal",
                            "referencedTableName": "journal_entries",
                            "referencedColumnNames": "journal_entry_id",
                            "onDelete": "SET NULL"
                        }
                    }
                ]
            }
        }
    ]
}