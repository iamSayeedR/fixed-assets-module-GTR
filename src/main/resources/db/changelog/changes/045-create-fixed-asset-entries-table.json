{
    "databaseChangeLog": [
        {
            "changeSet": {
                "id": "045-create-fixed-asset-entries-table",
                "author": "system",
                "changes": [
                    {
                        "createTable": {
                            "tableName": "fixed_asset_entries",
                            "columns": [
                                {
                                    "column": {
                                        "name": "entry_id",
                                        "type": "BIGINT",
                                        "autoIncrement": true,
                                        "constraints": {
                                            "primaryKey": true,
                                            "nullable": false
                                        }
                                    }
                                },
                                {
                                    "column": {
                                        "name": "entry_number",
                                        "type": "VARCHAR(50)",
                                        "constraints": {
                                            "unique": true,
                                            "nullable": false
                                        }
                                    }
                                },
                                {
                                    "column": {
                                        "name": "entry_date",
                                        "type": "DATE",
                                        "constraints": {
                                            "nullable": false
                                        }
                                    }
                                },
                                {
                                    "column": {
                                        "name": "fixed_asset_id",
                                        "type": "BIGINT",
                                        "constraints": {
                                            "nullable": false
                                        }
                                    }
                                },
                                {
                                    "column": {
                                        "name": "description",
                                        "type": "TEXT"
                                    }
                                },
                                {
                                    "column": {
                                        "name": "initial_cost",
                                        "type": "DECIMAL(19,4)",
                                        "constraints": {
                                            "nullable": false
                                        }
                                    }
                                },
                                {
                                    "column": {
                                        "name": "salvage_value",
                                        "type": "DECIMAL(19,4)",
                                        "defaultValueNumeric": 0
                                    }
                                },
                                {
                                    "column": {
                                        "name": "useful_life_months",
                                        "type": "INT"
                                    }
                                },
                                {
                                    "column": {
                                        "name": "total_units",
                                        "type": "INT"
                                    }
                                },
                                {
                                    "column": {
                                        "name": "depreciation_method",
                                        "type": "VARCHAR(50)",
                                        "constraints": {
                                            "nullable": false
                                        }
                                    }
                                },
                                {
                                    "column": {
                                        "name": "depreciation_start_date",
                                        "type": "DATE",
                                        "constraints": {
                                            "nullable": false
                                        }
                                    }
                                },
                                {
                                    "column": {
                                        "name": "gl_account_id",
                                        "type": "BIGINT"
                                    }
                                },
                                {
                                    "column": {
                                        "name": "depreciation_gl_account_id",
                                        "type": "BIGINT"
                                    }
                                },
                                {
                                    "column": {
                                        "name": "expense_gl_account_id",
                                        "type": "BIGINT"
                                    }
                                },
                                {
                                    "column": {
                                        "name": "journal_entry_id",
                                        "type": "BIGINT"
                                    }
                                },
                                {
                                    "column": {
                                        "name": "is_posted",
                                        "type": "BOOLEAN",
                                        "defaultValueBoolean": false
                                    }
                                },
                                {
                                    "column": {
                                        "name": "posted_date",
                                        "type": "TIMESTAMP"
                                    }
                                },
                                {
                                    "column": {
                                        "name": "posted_by",
                                        "type": "VARCHAR(100)"
                                    }
                                },
                                {
                                    "column": {
                                        "name": "created_at",
                                        "type": "TIMESTAMP",
                                        "defaultValueComputed": "CURRENT_TIMESTAMP"
                                    }
                                },
                                {
                                    "column": {
                                        "name": "updated_at",
                                        "type": "TIMESTAMP",
                                        "defaultValueComputed": "CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP"
                                    }
                                },
                                {
                                    "column": {
                                        "name": "created_by",
                                        "type": "VARCHAR(100)"
                                    }
                                },
                                {
                                    "column": {
                                        "name": "updated_by",
                                        "type": "VARCHAR(100)"
                                    }
                                }
                            ]
                        }
                    },
                    {
                        "addForeignKeyConstraint": {
                            "baseTableName": "fixed_asset_entries",
                            "baseColumnNames": "fixed_asset_id",
                            "constraintName": "fk_fixed_asset_entries_asset",
                            "referencedTableName": "fixed_assets",
                            "referencedColumnNames": "fixed_asset_id"
                        }
                    },
                    {
                        "addForeignKeyConstraint": {
                            "baseTableName": "fixed_asset_entries",
                            "baseColumnNames": "journal_entry_id",
                            "constraintName": "fk_fixed_asset_entries_journal",
                            "referencedTableName": "journal_entries",
                            "referencedColumnNames": "journal_entry_id",
                            "onDelete": "SET NULL"
                        }
                    }
                ]
            }
        }
    ]
}